{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@rgb-config": ["./src/config"],
      "@rgb-schema/*": ["./src/schema/*"],
      "@rgb-template": ["./src/template"],
      "@rg-share": ["../shared"],
      "@rgb-util": ["./src/util"]
    }
  }
}
